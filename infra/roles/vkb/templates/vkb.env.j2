# VKB Environment Configuration
# Managed by Ansible - do not edit manually

# Database
DATABASE_URL=postgresql://{{ postgres_user }}:{{ postgres_password }}@localhost:5432/{{ postgres_db }}
VKB_DB_HOST=localhost
VKB_DB_NAME={{ postgres_db }}
VKB_DB_USER={{ postgres_user }}
VKB_DB_PASSWORD={{ postgres_password }}

# Server
VALENCE_EXTERNAL_URL=https://{{ domain }}

# OAuth
VALENCE_OAUTH_PASSWORD={{ lookup('env', 'VALENCE_OAUTH_PASSWORD') | default('', true) }}
VALENCE_OAUTH_JWT_SECRET={{ lookup('env', 'VALENCE_OAUTH_JWT_SECRET') | default('', true) }}

# OpenAI (for embeddings - leave empty for local embeddings)
OPENAI_API_KEY={{ lookup('env', 'OPENAI_API_KEY') | default('', true) }}
