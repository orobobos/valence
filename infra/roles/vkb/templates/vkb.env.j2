# Database
DATABASE_URL=postgresql://{{ postgres_user }}:{{ postgres_password }}@localhost:5432/{{ postgres_db }}

# Matrix
MATRIX_HOMESERVER=https://{{ domain }}
MATRIX_USER=@valence-bot:{{ domain }}
MATRIX_PASSWORD={{ lookup('env', 'VALENCE_BOT_PASSWORD') }}

