# Dockerfile for Valence Integration Tests
# Lightweight image for running tests and the server

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy project files
COPY pyproject.toml .
COPY src/ src/

# Install package with dev dependencies
RUN pip install --no-cache-dir -e ".[dev]"

# Copy tests (for test-runner)
COPY tests/ tests/

# Default command: run the server
CMD ["python", "-m", "valence.server.app"]
